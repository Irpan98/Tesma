<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gallery"
            type="id.itborneo.testmagangandroidv4.menu.gallery.viewmodels.ItemGalleryViewModel" />
    </data>

    <id.itborneo.testmagangandroidv4.utils.widgets.SquareImageView
        android:id="@+id/ivGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:setImageUrl="@{gallery.imageUrl}"
        tools:srcCompat="@drawable/thumbnail_placeholder">

    </id.itborneo.testmagangandroidv4.utils.widgets.SquareImageView>
</layout>